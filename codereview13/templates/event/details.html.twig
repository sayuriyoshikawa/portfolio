{% extends 'base.html.twig' %}

{% block body %}
<style>
.container {
    margin-top: 30px;
     background-color:rgb(32, 34, 34);
    color: white;
    box-shadow: 7px 7px 9px #8e8b94;

}
h1 {
    text-align:center;
}
img {
    width:100%;
    margin: auto;
}
.contents {
    width:75%;
    height:100%;
    margin:auto;
     min-width: 300px;
}
.contents p {
    font-size: calc(10px + 1rem);
}
.link {
    overflow:hidden;
}    
hr  {
  border-top: 0.5px solid white;
}
</style>

<div class="container pb-4">
    <div class="contents">
        <h1 class="page-header m-5 pt-5">{{event.name}}</h1>
        <center><img src="{{event.picture }}"></center>
   
                <h1 class="m-4">Information</h1>
        <div class="row g-5">
            <div class="col col-lg-6 col-md-6 col-sm-12">
                <p class="text fs-3">Date: <strong> {{event.time|date('F j, Y, g:i a')}} </strong> </p>
                <p>Capacity: {{event.capacity}} people</p>
                <p>Address: {{event.address}}</p>
            
                <p>type: {{event.type}}</p>
                <p class="link">link: <a class="text-white" href="{{event.url}}">{{event.url}}</a></p>
                <hr class="hr1">
                <p>email: {{event.email}}</p>
                <p>phone: {{event.phone}}</p>
            </div>
            <div class="col col-lg-6 col-md-6 col-sm-12 mt-5 ms-5">
                <p>About:<br>{{event.description}}</p><br>
                <a class="btn btn-dark" href="/">Back to events</a>
            </div>  
       </div>
    </div>
</div>

{% endblock %}